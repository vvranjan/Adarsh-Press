<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/artboard_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/pUid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/item"
        android:layout_margin="20sp"
        android:paddingLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:textSize="15sp"
        android:hint="Item Name"
        android:background="@drawable/rounded_white"
         />

    <EditText
        android:id="@+id/typeUnit"
        android:layout_margin="20sp"
        android:paddingLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:inputType="number"
        android:hint="No. of Units"
        android:textSize="15sp"
        android:background="@drawable/rounded_white"
        />

    <Spinner
        android:id="@+id/unit"
        android:padding="20sp"
        android:layout_margin="20sp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="60sp" />


    <EditText
        android:id="@+id/costPrice"
        android:paddingLeft="20sp"
        android:layout_margin="20sp"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:inputType="number"
        android:hint="Cost Price"
        android:textSize="15sp"
        android:background="@drawable/rounded_white"/>

    <Spinner
        android:id="@+id/gst"
        android:padding="20sp"
        android:layout_margin="20sp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="60sp" />



    <EditText
        android:id="@+id/totalCp"
        android:paddingLeft="20sp"
        android:layout_margin="20sp"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="50sp"
        android:textSize="15sp"
        android:hint="Total Cost Price"
        android:background="@drawable/rounded_white"/>

    <EditText
        android:id="@+id/wholesalePrice"
        android:paddingLeft="20sp"
        android:layout_margin="20sp"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="50sp"
        android:textSize="15sp"
        android:hint="Wholesale Price"
        android:background="@drawable/rounded_white"/>

    <EditText
        android:id="@+id/retailPrice"
        android:paddingLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_margin="20sp"
        android:inputType="number"
        android:hint="Retail Price"
        android:textSize="15sp"
        android:background="@drawable/rounded_white"/>


    <Button
        android:id="@+id/addData"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20sp"
        android:text="Add Value to firebase"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/dashboard"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_centerHorizontal="true"
    android:layout_margin="20sp"
    android:text="Go to Dashboard"
    android:background="@drawable/rounded_button"/>


</LinearLayout>

</ScrollView>